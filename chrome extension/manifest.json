{
  "manifest_version": 3,
  "name": "Temporary Email Autofill",
  "version": "1.0",
  "description": "Generates a temporary email and autofills sign-up forms.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}
